modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Web Preview"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Expo Web"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Expo Web Build"

[[workflows.workflow]]
name = "Web Preview"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx serve web-build -p 5000"
waitForPort = 5000

[[workflows.workflow]]
name = "Expo Web"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx expo export:web && npx serve web-build -p 5000"
waitForPort = 5000

[[workflows.workflow]]
name = "Expo Web Build"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx expo export:web"

[deployment]
run = ["sh", "-c", "npm install && npx expo start --web --port 5000"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 19006
externalPort = 3000
